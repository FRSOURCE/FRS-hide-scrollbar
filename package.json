{
  "name"           : "frs-hide-scrollbar",
  "version"        : "0.1.8",
  "description"    : "Easy & lightweight solution for cross-browser scrollbar hiding",
  "main"           : "index.js",
  "scripts"        : {
    "test"          : "tap ./src/scripts/*.spec.js -J",
    "test-coverage" : "yarn test --cov --coverage-report=lcov --100",
    "prestart"      : "yarn clean",
    "start"         : "parcel watch",
    "prebuild"      : "yarn clean",
    "build"         : "concurrently \"yarn buildAMD\" \"yarn buildVanilla\" \"yarn buildExample\"",
    "postbuild"     : "yarn docs",
    "buildAMD"      : "parcel build index.js -o FRS-hide-scrollbar --detailed-report",
    "buildVanilla"  : "./scripts/buildVanilla.js",
    "buildExample"  : "parcel build docs/example.src.html -d docs --public-url /FRS-hide-scrollbar -o example.dist.html",
    "prepublishOnly": "yarn test-coverage && yarn build",
    "postpublish"   : "git add dist && git push origin --all && git push origin --tags",
    "predevExample" : "yarn clean",
    "devExample"    : "parcel docs/example.src.html -d docs -o example.dist.html",
    "clean"         : "rimraf dist/**/* && rimraf docs/*.dist.html && rimraf docs/*.{js,css,map} && rimraf report.html",
    "docs"          : "jsdoc2md src/**/*.js > docs/api.md"
  },
  "author"         : "Jakub Freisler <FRSgit@users.noreply.github.com>",
  "license"        : "Apache-2.0",
  "homepage"       : "https://github.com/FRSource/FRS-hide-scrollbarc#readme",
  "repository"     : {
    "type": "git",
    "url": "git+https://github.com/FRSource/FRS-hide-scrollbar.git"
  },
  "keywords"       : [
    "hide scroll",
    "efficient",
    "lightweight",
    "simple",
    "vanillaJS",
    "hide scrollbar",
    "scrollbar",
    "css",
    "js"
  ],
  "files"          : [
    "dist/",
    "src/",
    "LICENSE",
    "yarn.lock"
  ],
  "bugs"           : {
    "url": "https://github.com/FRSource/FRS-hide-scrollbar/issues"
  },
  "devDependencies": {
    "concurrently"                   : "^4.0.1",
    "fast-glob"                      : "^2.2.2",
    "jsdoc-to-markdown"              : "^4.0.1",
    "jsdom"                          : "^12.0.0",
    "parcel-bundler"                 : "^1.7.1",
    "parcel-plugin-bundle-visualiser": "^1.0.2",
    "postcss-import"                 : "^12.0.0",
    "postcss-reporter"               : "^6.0.0",
    "precss"                         : "^3.1.2",
    "rimraf"                         : "^2.6.2",
    "sass"                           : "^1.14.1",
    "tap"                            : "^12.0.1",
    "uglify-js"                      : "^3.4.6"
  },
  "dependencies"   : {}
}
